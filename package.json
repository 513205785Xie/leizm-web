{
  "name": "@leizm/connect",
  "version": "1.3.3",
  "description": "现代的 Web 中间件基础框架，完美支持 TypeScript，构建可维护的大型 Web 项目。",
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "test": "npm run lint && mocha",
    "test-cov": "nyc --reporter=lcov mocha && nyc report",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc",
    "prepublish": "npm run test && npm run compile",
    "lint": "prettier --write src/**/*.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizongmin/leizm-connect.git"
  },
  "keywords": [
    "connect"
  ],
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leizongmin/leizm-connect/issues"
  },
  "homepage": "https://github.com/leizongmin/leizm-connect#readme",
  "dependencies": {
    "@types/finalhandler": "0.0.32",
    "@types/node": "^8.0.53",
    "@types/parseurl": "^1.3.1",
    "finalhandler": "^1.1.0",
    "parseurl": "^1.3.2",
    "path-to-regexp": "^1.7.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.0.5",
    "@types/connect": "^3.4.31",
    "@types/mocha": "^2.2.44",
    "@types/supertest": "^2.0.3",
    "@types/uws": "^0.13.0",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "connect": "^3.6.5",
    "coveralls": "^3.0.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "prettier": "^1.8.2",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1",
    "uws": "^9.14.0"
  }
}
