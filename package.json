{
  "name": "@leizm/connect",
  "version": "0.0.1",
  "description": "现代的 Web 中间件基础框架，完美支持 TypeScript，构建可维护的大型 Web 项目。",
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "test": "mocha",
    "test-cov": "nyc --reporter=lcov mocha && nyc report",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc",
    "prepublish": "npm run compile"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizongmin/leizm-connect.git"
  },
  "keywords": [
    "connect"
  ],
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/leizongmin/leizm-connect/issues"
  },
  "homepage": "https://github.com/leizongmin/leizm-connect#readme",
  "dependencies": {
    "@types/finalhandler": "0.0.32",
    "@types/node": "^8.0.19",
    "@types/parseurl": "^1.3.1",
    "@types/path-to-regexp": "^1.7.0",
    "finalhandler": "^1.0.4",
    "parseurl": "^1.3.1",
    "path-to-regexp": "^1.7.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.2",
    "@types/mocha": "^2.2.41",
    "@types/supertest": "^2.0.2",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "coveralls": "^2.13.1",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-config-lei": "^1.0.1",
    "typescript": "^2.4.2"
  }
}
